#!/bin/bash

# check if host and port arguments were provided
if [ $# -ne 2 ]; then
  echo "Usage: $0 HOST PORT"
  exit 1
fi

# get HOST from arg
HOST=$1
PORT=$2

# use nc to try to connect to the host and port
nc -z "$HOST" "$PORT"

# check the exit status of nc
if [ $? -eq 0 ]; then
  echo "Port $PORT is open"
else
  echo "Port $PORT is closed or unreachable"
fi
